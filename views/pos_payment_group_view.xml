<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_payment_category_tree" model="ir.ui.view">
            <field name="name">pos.payment.category.tree</field>
                <field name="model">pos.payment.category</field>
                <field name="priority" eval="16"/>
                <field name="arch" type="xml">
                <tree string="POS Payment Category">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="pos_payment_category_form" model="ir.ui.view">
            <field name="name">pos.payment.category.form</field>
            <field name="model">pos.payment.category</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="POS Payment Category">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_pos_payment_category" model="ir.actions.act_window">
            <field name="name">POS Payment Category</field>
            <field name="res_model">pos.payment.category</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_pos_payment_category"
            name="Payment Method Category"
            parent="point_of_sale.menu_point_config_product"
            action="pw_pos_payment_category.action_pos_payment_category"/>

        <record id="pos_payment_method_view_form_inherit_category" model="ir.ui.view">
            <field name="name">pos.payment.method.form.inherit.category</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <field name="cash_journal_id" position="after">
                    <field name="pw_category_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
